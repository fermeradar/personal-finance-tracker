{
  "name": "personal-finance-tracker",
  "version": "1.0.0",
  "description": "A Telegram bot-based Personal Finance Tracker",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage",
    "migrate": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "migrate:list": "node-pg-migrate list",
    "migrate:test": "node-pg-migrate up --dry-run",
    "clean": "node scripts/cleanup.js",
    "fix-permissions": "node scripts/fix-permissions.js",
    "setup": "npm run fix-permissions && npm install && node scripts/verify-install.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "finance",
    "tracker",
    "analytics",
    "nodejs"
  ],
  "author": "fermeradar",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.3",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "grammy": "^1.19.2",
    "helmet": "^7.1.0",
    "json2csv": "^5.0.7",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "node-telegram-bot-api": "0.63.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/utils/logger.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "test-results",
        "outputName": "junit.xml",
        "ancestorSeparator": " â€º ",
        "uniqueOutputName": "false",
        "suiteNameTemplate": "{filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
      }]
    ]
  }
}
